<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.BookDetails">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="ImageLable" HorizontalOptions="Center"/>
            <Label x:Name="Name" HorizontalOptions="Center"/>
            <Label x:Name="Author" HorizontalOptions="Center"/>
            <Label x:Name="Price"/>
            <Label x:Name="Rating"/>
            <Label x:Name="Description"/>
            <Button Text="Buy Now" Clicked="Button_Clicked"/>
        </StackLayout>
   </ContentPage.Content>
</ContentPage>